{
  "plugins": ["latex2e"],
  "rules": {
    "@textlint-ja/no-synonyms": {
      "severity": "warning"
    },
    "@textlint-rule/no-invalid-control-character": true,
    "ja-no-redundant-expression": {
      "severity": "warning"
    },
    "max-ten": {
      "severity": "warning"
    },
    "no-doubled-conjunction": {
      "severity": "warning"
    },
    "no-doubled-joshi": {
      "severity": "warning"
    },
    "no-dropping-the-ra": true,
    "no-mix-dearu-desumasu": true,
    "no-nfd": true
  },
  "filters": {
    "comments": true
  }
}
